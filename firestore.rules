rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Basic rule - allow access if authenticated
    match /{document=**} {
      // Allow read/write for all authenticated users to all collections
      allow read, write: if request.auth != null;
    }
    
    // Public data that doesn't require authentication
    match /breeds/{breedId} {
      allow read: if true;
    }
    match /petBreeds/{document=**} {
      allow read: if true;
    }
  }
}
